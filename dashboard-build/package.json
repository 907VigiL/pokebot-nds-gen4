{
  "name": "pokebot-v-dashboard",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-packager ."
  },
  "author": "NIDO",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.1.0",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.wyanido.app",
    "productName": "Pokebot V Dashboard",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "signingHashAlgorithms": [
        "sha1"
      ],
      "files": [
        "!gruntfile.js",
        "!README.md",
        "!notarize.js",
        "!.env",
        "!minify.js",
        "!.git/*",
        "!resources/mac/*"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
